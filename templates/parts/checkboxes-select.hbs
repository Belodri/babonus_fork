<!-- (spell components only) -->
<div class="form-group">
  <label class="label" data-tooltip="{{tooltip}}">{{localize label}}</label>
  <div class="form-fields">
    <div class="checkboxes">
      {{#each types}}
      <label for="{{../appId}}-{{value}}" data-hide-input="true" data-tooltip="{{tooltip}}">
        <input type="checkbox" name="filters.{{../id}}.types" value="{{value}}" id="{{../appId}}-{{value}}" {{checked checked}}>
        <span class="check">{{{label}}}</span>
      </label>
      {{/each}}
    </div>
    <select name="filters.{{id}}.match">
      {{selectOptions options selected=selected localize=true}}
    </select>
  </div>
  <a data-action="delete-filter" data-id="{{id}}">
    <i class="fa-solid fa-trash"></i>
  </a>
</div>
