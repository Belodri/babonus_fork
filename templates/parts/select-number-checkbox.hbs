<!-- Token Sizes only -->
<div class="form-group">
  <label class="label" data-tooltip="{{tooltip}}">{{localize label}}</label>
  <div class="form-fields">
    <select name="filters.{{id}}.type" data-dtype="Number">
      {{selectOptions options selected=type localize=true}}
    </select>
    <input type="number" name="filters.{{id}}.size" placeholder="{{localize 'BABONUS.SizePlaceholder'}}" value="{{size}}">
    <span class="sep">{{localize "BABONUS.CompareToSelf"}}</span>
    <input type="checkbox" name="filters.{{id}}.self" {{checked self}}>
  </div>
  <a data-action="delete-filter" data-id="{{id}}">
    <i class="fa-solid fa-trash"></i>
  </a>
</div>
