<p class="babonus-key-description">
    {{localize "BABONUS.KEY.SAVE_ABILITIES_DESC"}}
</p>
<table class="babonus">
    <thead>
        <tr>
            <th>{{localize "BABONUS.KEY.SAVE_ABILITIES_NAME"}}</th>
            <th>{{localize "BABONUS.KEY.SAVE_ABILITIES_BOX"}}</th>
        </tr>
    </thead>
    <tbody>
        {{#each types as |type|}}
        <tr>
            <td>{{type.label}}</td>
            <td><input type="checkbox" class="babonus-checkbox-100" id="{{type.value}}" {{#if type.checked}}checked{{/if}}></td>
        </tr>
        {{/each}}
    </tbody>
</table>
