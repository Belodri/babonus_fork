<form class="babonus subapp">

  <div class="form-group">
    <label data-tooltip="BABONUS.ConfigurationAuraRangeTooltip" class="label">
      {{localize "BABONUS.ConfigurationAuraRange"}}
    </label>
    <div class="form-fields">
      <input type="number" name="aura.range" value="{{aura.range}}" placeholder="{{localize 'BABONUS.ConfigurationAuraRangePlaceholder'}}" {{disabled templateChecked}}>
      <span class="sep">{{localize "BABONUS.ConfigurationAuraTemplate"}}</span>
      <input type="checkbox" name="aura.isTemplate" {{disabled templateDisabled}} {{checked templateChecked}}>
    </div>
  </div>

  <div class="form-group">
    <label data-tooltip="BABONUS.ConfigurationAuraValidTargetsTooltip" class="label">
      {{localize "BABONUS.ConfigurationAuraValidTargets"}}
    </label>
    <div class="form-fields">
      <select name="aura.disposition" data-dtype="Number">
        {{selectOptions choices selected=aura.disposition localize=true}}
      </select>
      <span class="sep">{{localize "BABONUS.ConfigurationAuraSelf"}}</span>
      <input type="checkbox" name="aura.self" {{checked aura.self}}>
    </div>
  </div>

  <div class="form-group" data-name="blockers">
    <label data-tooltip="BABONUS.ConfigurationAuraBlockingConditionsTooltip" class="label">
      {{localize "BABONUS.ConfigurationAuraBlockingConditions"}}
    </label>
    <div class="form-fields">
      <input type="text" name="aura.blockers" value="{{blockers}}" {{disabled templateChecked}}>
      <button class="babonus-keys" type="button" {{disabled templateChecked}}>
        <i class="fa-solid fa-key"></i> {{localize "BABONUS.BUTTONS.KEYS"}}
      </button>
    </div>
  </div>

  <button type="submit">
    <i class="fa-solid fa-save"></i> {{localize "Save"}}
  </button>

</form>
