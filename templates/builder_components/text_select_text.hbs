<!-- (arbitraryComparison only) -->
{{#each array as |a|}}
<div class="form-group" data-id="{{../id}}">
  <label class="label" data-tooltip="{{../tooltip}}">{{localize ../label}}</label>
  <div class="form-fields">
    <input type="text" name="filters.{{a}}.{{../id}}.one" placeholder="{{localize ../placeholderOne}}">
    <select name="filters.{{a}}.{{../id}}.operator">
      {{#each ../selectOptions as |option|}}
      <option value="{{option.value}}">{{{option.label}}}</option>
      {{/each}}
    </select>
    <input type="text" name="filters.{{a}}.{{../id}}.other" placeholder="{{localize ../placeholderOther}}">
  </div>
  <a data-action="delete-filter" data-tooltip="BABONUS.DeleteThisFilter">
    <i class="fa-solid fa-trash"></i>
  </a>
</div>
{{/each}}
