<div class="form-group" data-name="{{name}}">
  <label data-tooltip="{{{localize tooltip}}}" class="label">
    {{localize label}}
  </label>
  <div class="form-fields">
    <input type="number" name="filters.{{name}}.min" placeholder="{{{localize 'Minimum'}}}">
    <span class="sep">&mdash;</span>
    <input type="number" name="filters.{{name}}.max" placeholder="{{{localize 'Maximum'}}}">
  </div>
  <a class="filter-deletion" data-tooltip="{{{localize 'BABONUS.TOOLTIPS.DELETE_THIS_FILTER'}}}">
    <i class="fa-solid fa-trash"></i>
  </a>
</div>
