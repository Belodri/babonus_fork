<div class="form-group" data-id="{{id}}">
  <label class="label" data-tooltip="{{tooltip}}">{{localize label}}</label>
  <div class="form-fields">
    <input type="number" name="filters.{{id}}.min" placeholder="{{{localize 'Minimum'}}}">
    <span class="sep">&mdash;</span>
    <input type="number" name="filters.{{id}}.max" placeholder="{{{localize 'Maximum'}}}">
  </div>
  <a data-action="delete-filter" data-tooltip="BABONUS.DeleteThisFilter">
    <i class="fa-solid fa-trash"></i>
  </a>
</div>
