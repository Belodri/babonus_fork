<div class="form-group">
  <label data-tooltip="{{{localize 'BABONUS.TOOLTIPS.AURA_RANGE'}}}" class="label">
    {{localize "BABONUS.LABELS.AURA_RANGE"}}
  </label>
  <div class="form-fields">
    <input type="number" name="aura.range" placeholder="{{localize 'BABONUS.PLACEHOLDERS.AURA_RANGE'}}">
    <span class="sep">{{localize "BABONUS.LABELS.AURA_TEMPLATE"}}</span>
    <input type="checkbox" data-tooltip="{{{localize 'BABONUS.TOOLTIPS.AURA_TEMPLATE'}}}" name="aura.isTemplate">
  </div>
</div>
<div class="form-group">
  <label data-tooltip="{{{localize 'BABONUS.TOOLTIPS.AURA_FIELDS'}}}" class="label">
    {{localize "BABONUS.LABELS.AURA_FIELDS"}}
  </label>
  <div class="form-fields">
    <select name="aura.disposition" data-dtype="Number">
      <option value="2">{{localize "BABONUS.VALUES.DISPOSITION.ANY"}}</option>
      <option value="1">{{localize "BABONUS.VALUES.DISPOSITION.ALLY"}}</option>
      <option value="-1">{{localize "BABONUS.VALUES.DISPOSITION.ENEMY"}}</option>
    </select>
    <span class="sep">{{localize "BABONUS.LABELS.AURA_SELF"}}</span>
    <input type="checkbox" data-tooltip="{{{localize 'BABONUS.TOOLTIPS.AURA_SELF'}}}" name="aura.self">
  </div>
</div>
<div class="form-group">
  <label data-tooltip="{{{localize 'BABONUS.TOOLTIPS.AURA_BLOCKERS'}}}" class="label">
    {{localize "BABONUS.LABELS.AURA_BLOCKERS"}}
  </label>
  <div class="form-fields">
    <input type="text" name="aura.blockers">
    <button class="babonus-keys" data-type="blockers" type="button">
      <i class="fa-solid fa-key"></i> {{localize "BABONUS.BUTTONS.KEYS"}}
    </button>
  </div>
</div>
