<div class="form-group">
  <label data-tooltip="BABONUS.TOOLTIPS.AURA_RANGE" class="label">
    {{localize "BABONUS.LABELS.AURA_RANGE"}}
  </label>
  <div class="form-fields">
    <input type="number" name="aura.range" placeholder="{{localize 'BABONUS.PLACEHOLDERS.AURA_RANGE'}}">
    <span class="sep">{{localize "BABONUS.LABELS.AURA_TEMPLATE"}}</span>
    <input type="checkbox" data-tooltip="BABONUS.TOOLTIPS.AURA_TEMPLATE" name="aura.isTemplate" {{#unless isItem}}disabled{{/unless}}>
  </div>
</div>
<div class="form-group">
  <label data-tooltip="BABONUS.TOOLTIPS.AURA_FIELDS" class="label">
    {{localize "BABONUS.LABELS.AURA_FIELDS"}}
  </label>
  <div class="form-fields">
    <select name="aura.disposition" data-dtype="Number">
      {{selectOptions choices selected=2 localize=true}}
    </select>
    <span class="sep">{{localize "BABONUS.LABELS.AURA_SELF"}}</span>
    <input type="checkbox" data-tooltip="BABONUS.TOOLTIPS.AURA_SELF" name="aura.self">
  </div>
</div>
<div class="form-group" data-name="blockers">
  <label data-tooltip="BABONUS.TOOLTIPS.blockers" class="label">
    {{localize "BABONUS.LABELS.AURA_BLOCKERS"}}
  </label>
  <div class="form-fields">
    <input type="text" name="aura.blockers">
    <button class="babonus-keys" type="button">
      <i class="fa-solid fa-key"></i> {{localize "BABONUS.BUTTONS.KEYS"}}
    </button>
  </div>
</div>
