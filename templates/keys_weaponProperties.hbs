<p class="babonus-key-description">
    {{localize "BABONUS.KEY.PROPERTIES_DESC"}}
</p>
<table class="babonus">
    <thead>
        <tr>
            <th>{{localize "BABONUS.KEY.PROPERTIES_NAME"}}</th>
            <th>{{localize "BABONUS.KEY.PROPERTIES_NEED"}}</th>
            <th>{{localize "BABONUS.KEY.PROPERTIES_UNFIT"}}</th>
        </tr>
    </thead>
    <tbody>
        {{#each types as |type|}}
        <tr>
            <td>{{type.label}}</td>
            <td><input type="checkbox" class="babonus-checkbox-100" id="{{type.value}}" data-property="needed" {{#if type.needed}}checked{{/if}}></td>
            <td><input type="checkbox" class="babonus-checkbox-100" id="{{type.value}}" data-property="unfit" {{#if type.unfit}}checked{{/if}}></td>
        </tr>
        {{/each}}
    </tbody>
</table>
